<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biscoito.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="BiscoitoImg"
                Source="before_cookie.jpg"
                HeightRequest="450"
                Margin="10"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="Um monstro de brinquedo tomando café com biscoito."/>

            <Label
                Text="AI QUE FOME!!"
                Style="{StaticResource Headline}"
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />


            <Button
                x:Name="ComerBtn"
                Text="Comer o biscoito" 
                SemanticProperties.Hint="Troca a imagem por uma sem biscoito"
                Clicked="ComerBtn_Clicked"
                MaximumWidthRequest="400"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
